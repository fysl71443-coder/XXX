{
    "name": "backend",
    "version": "1.0.0",
    "main": "server.js",
    "type": "module",
    "engines": {
        "node": ">=22.12.0 <23.0.0"
    },
    "scripts": {
        "start": "node server.js",
        "dev": "cross-env PORT=5000 nodemon server.js",
        "test": "node scripts/run-all-tests.js",
        "test:all": "node scripts/run-all-tests.js",
        "test:comprehensive": "node scripts/comprehensive_system_test.cjs",
        "test:pos": "node scripts/test-pos-flow.js",
        "test:e2e": "node scripts/e2e-test.js",
        "test:e2e:playwright": "node scripts/e2e-playwright-test.js",
        "test:playwright": "playwright test",
        "test:playwright:ui": "playwright test --ui",
        "test:playwright:headed": "playwright test --headed",
        "test:playwright:full": "playwright test --project=chromium-full-workflow",
        "test:playwright:full:headed": "playwright test --project=chromium-full-workflow --headed",
        "test:playwright:real": "playwright test --project=chromium-real-workflow",
        "test:playwright:real:headed": "playwright test --project=chromium-real-workflow --headed",
        "test:fix-expenses": "node scripts/fix_old_expenses.js",
        "test:skip-api": "node scripts/run-all-tests.js --skip-api"
    },
    "dependencies": {
        "@prisma/client": "^7.2.0",
        "axios": "^1.13.2",
        "bcrypt": "^6.0.0",
        "cors": "^2.8.5",
        "dotenv": "^17.2.3",
        "express": "^4.18.2",
        "jsonwebtoken": "^9.0.3",
        "pg": "^8.16.3",
        "pg-hstore": "^2.3.4",
        "sequelize": "^6.37.7"
    },
    "devDependencies": {
        "@playwright/test": "^1.57.0",
        "cross-env": "^10.1.0",
        "nodemon": "^3.1.11",
        "playwright": "^1.57.0",
        "prisma": "^6.19.2"
    }
}
